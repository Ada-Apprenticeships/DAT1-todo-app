<h1>Add a new todo</h1>

<form action="add_todo" method="post">

  <div>
    <label for="email">Email Address:</label>
    <input list="emails" type="text" id="email" name="email" />
    <datalist id="emails">
      {{#each users}}
        <option value="{{this.email_address}}"></option>
      {{/each}}
    </datalist>
  </div>

  <div>
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" placeholder="Todo Title" />
  </div>

  <div>
    <label for="content">Content:</label>
    <input type="text" id="content" name="content" placeholder="Todo Content" />
  </div>

  <div>
    <label for="priority">Priority:</label>
    <select id="priority" name="priority">
      <option value="U">Urgent</option>
      <option value="H">High</option>
      <option value="M">Medium</option>
      <option value="L">Low</option>
    </select>
  </div>

  <button type="submit">Submit</button>
</form>

<a href="/">Home Page</a>